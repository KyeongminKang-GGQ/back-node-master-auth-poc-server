{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2016",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@common/*": [
        "common/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@storage/*": [
        "storage/*"
      ],
      "@workers/*": [
        "workers/*"
      ]
    },
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}